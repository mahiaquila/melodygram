<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        android:padding="@dimen/small_padding_size"
        android:textColor="@android:color/white"
        android:textSize="@dimen/medium_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin_size"
        android:layout_marginTop="@dimen/small_margin_size"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/medium_margin_size">

        <RadioButton
            android:id="@+id/everybody_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/medium_margin_size"
            android:paddingRight="@dimen/small_padding_size"
            android:text="@string/everybody"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_text_size" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:layout_marginTop="@dimen/small_margin_size"
            android:background="@color/light_app_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin_size"
        android:layout_marginTop="@dimen/small_margin_size"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/medium_margin_size">

        <RadioButton
            android:id="@+id/nobody_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/medium_margin_size"
            android:paddingRight="@dimen/small_padding_size"
            android:text="@string/nobody"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_text_size" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:layout_marginTop="@dimen/small_margin_size"
            android:background="@color/light_app_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_size"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/medium_margin_size">

        <RadioButton
            android:id="@+id/contact_only_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/small_padding_size"
            android:paddingRight="@dimen/small_padding_size"
            android:text="@string/contact"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_text_size" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:layout_marginTop="@dimen/small_margin_size"
            android:background="@color/light_app_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/small_margin_size"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_ok_button"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@color/app_color"
                android:gravity="center"
                android:paddingBottom="@dimen/extra_small_padding_size"
                android:paddingLeft="@dimen/small_padding_size"
                android:paddingRight="@dimen/small_padding_size"
                android:paddingTop="@dimen/extra_small_padding_size"
                android:text="@string/ok"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/dialog_cancel_button"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@color/app_color"
                android:gravity="center"
                android:paddingBottom="@dimen/extra_small_padding_size"
                android:paddingTop="@dimen/extra_small_padding_size"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
