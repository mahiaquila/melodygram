<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/stickers_tab"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/emojis_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/emoji_inactive" />


        <ImageButton
            android:id="@+id/sticker_0"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/sticker_active" />


        <ImageButton
            android:id="@+id/sticker_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/sticker_one" />


        <ImageButton
            android:id="@+id/sticker_2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/sticker_two" />


        <ImageButton
            android:id="@+id/sticker_3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/sticker_three" />

        <ImageButton
            android:id="@+id/sticker_4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/sticker_four" />

        <ImageButton
            android:id="@+id/sticker_5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_app_color"
            android:src="@drawable/download"
            android:visibility="gone"/>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/sticker_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stickers_tab"

        />

</RelativeLayout>
