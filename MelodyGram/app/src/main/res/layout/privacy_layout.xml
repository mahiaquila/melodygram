<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_layout" />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding_size">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:background="@color/app_color" />

        <RelativeLayout
            android:id="@+id/last_seen_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding_size">

            <TextView
                android:id="@+id/last_seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_seen"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size" />
            <TextView
                android:id="@+id/last_seen_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_seen"
                android:layout_below="@+id/last_seen"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />



        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:background="@color/light_app_color" />

        <RelativeLayout
            android:id="@+id/profile_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding_size">

            <TextView
                android:id="@+id/profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_photo"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size" />
            <TextView
                android:id="@+id/profile_photo_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_seen"
                android:layout_below="@+id/profile_photo"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />


        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:background="@color/app_color" />

        <RelativeLayout
            android:id="@+id/status_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding_size">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size" />
            <TextView
                android:id="@+id/status_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_seen"
                android:layout_below="@+id/status"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_message"
                android:padding="@dimen/small_padding_size"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_below="@+id/status_status"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />


        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginRight="@dimen/small_padding_size"
            android:background="@color/app_color" />
        <RelativeLayout
            android:id="@+id/read_receipt_parrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding_size">

            <TextView
                android:id="@+id/read_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read Receipt"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size" />
            <TextView
                android:id="@+id/read_receipt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="on"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>